# CRM System Environment Variables
# Copy this file to .env and fill in your values
# Command: cp env.example .env

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_DB=crm_db
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=your_secure_password_here

# ===========================================
# JWT CONFIGURATION
# ===========================================
# Generate a secure 256-bit key with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here

# ===========================================
# EMAIL CONFIGURATION (IMAP/SMTP)
# ===========================================
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password

# ===========================================
# AI CONFIGURATION (Groq API)
# ===========================================
AI_API_KEY=your_groq_api_key
AI_API_URL=https://api.groq.com/openai/v1/chat/completions
AI_MODEL=llama-3.3-70b-versatile

# ===========================================
# WOODPECKER API (optional cold email tool)
# ===========================================
WOODPECKER_API_KEY=your_woodpecker_api_key

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000

